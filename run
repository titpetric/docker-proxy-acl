#!/bin/bash
function go_docker {
	ARGS=""
	if [ -f "docker.args" ]; then
		ARGS=$(cat docker.args | xargs echo -n)
	fi
	docker run $ARGS --rm=true -it -v `pwd`:/go/src/app -w /go/src/app golang go "$@"
}

function go_fetch {
	BASE="vendor/"
	if [ ! -d "$BASE$1" ]; then
		echo "Fetching: $1"
		gvt fetch $1
	fi
}

go_fetch github.com/namsral/flag
go_fetch github.com/gorilla/mux

go_docker run docker-proxy-acl.go "$@"
